# MAST package is not in CRAN, in Biomanager
#Solution one
if (!require("BiocManager", quietly = TRUE))
    install.packages("BiocManager")

BiocManager::install("MAST")

#Solution two
install.packages("BiocManager")
library(BiocManager)
BiocManager::install("MAST")

